def tupla_par():
    print("Gerador de Tupla Par!")

    n = int(input("Digite o numero de elemtentos da sua tupla:"))
    tuplaGeral = ()

    for i in range(n):
        x = input("Digite os componentes da sua tupla:")
        tuplaGeral = tuplaGeral + tuple([x])
    
    print(tuplaGeral)
    
    tuplaPar = (tuplaGeral[::2])
    
    print(tuplaPar)

tupla_par()